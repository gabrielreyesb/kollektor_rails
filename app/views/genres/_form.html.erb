
<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Nuevo género</h1>

      <%= form_with(model: genre, class: "needs-validation", novalidate: true) do |form| %>
        <% if genre.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h2>
            <ul>
              <% genre.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name, "Nombre", class: "font-weight-bold" %> 
          <%= form.text_field :name, class: "form-control", required: true %> 
          <div class="invalid-feedback">
            Por favor ingresa el nombre del género. 
          </div>
        </div>

        <div class="form-group">
          <%= form.label :genre_image, "Imágen", class: "font-weight-bold" %>
          <div class="custom-file"> <%# Custom file input %>
            <%= form.file_field :genre_image, class: "custom-file-input", required: true %>
            <label class="custom-file-label" for="genre_genre_image">Seleccionar archivo</label>
          </div>
          <div class="invalid-feedback">
            Por favor selecciona una imagen.
          </div>
        </div>

        <div class="actions text-center mt-4"> 
          <%= form.submit "Guardar", class: "btn btn-primary custom-button" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Regresar a géneros", genres_path %>
  </div>
</div>