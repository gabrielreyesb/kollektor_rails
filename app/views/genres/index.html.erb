<div class="container mt-5">
  <h1 class="text-center mb-4">Géneros</h1>

  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="row">
  <% @genres.each do |genre| %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <% if genre.genre_image&.attached? %>
          <img src="<%= url_for(genre.genre_image) %>" class="card-img-top" alt="Imagen de <%= genre.name %>">
        <% else %>
          <%= image_tag image_path("default.jpg"), class: "card-img-top", alt: "Imagen por defecto" %>
        <% end %>

        <div class="card-body d-flex flex-column align-items-center">
          <h5 class="card-title"><%= genre.name %></h5>
          <div class="mt-auto">
            <%= link_to 'Ver', genre, class: 'btn btn-outline-primary btn-sm' %>
            <%= link_to 'Editar', edit_genre_path(genre), class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

  <div class="d-flex justify-content-between mt-4"> <%# Place buttons next to each other %>
    <%= link_to 'Agregar género', new_genre_path, class: 'btn btn-primary' %>
    <%= link_to "Volver a la colección", root_path, class: "btn btn-secondary" %>
  </div>
</div>
