<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Nuevo album</h1>

      <%= form_with(model: album, class: "needs-validation", novalidate: true) do |form| %> 
        <% if album.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>
            <ul>
              <% album.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
            <%= form.label :name, class: "font-weight-bold" %> 
            <%= form.text_field :name, class: "form-control", required: true %> 
            <div class="invalid-feedback">
              Please provide a name for the album.
            </div>
          </div>

          <div class="form-group">
            <%= form.label :year, class: "font-weight-bold" %>
            <%= form.number_field :year, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please provide a valid year for the album.
            </div>
          </div>

          <div class="form-group">
            <%= form.label :genre_id, class: "font-weight-bold" %>
            <%= form.collection_select :genre_id, @genres, :id, :name, { prompt: "Selecciona el género" }, { class: "form-control", required: true } %>
            <div class="invalid-feedback">
                Please select a genre.
            </div>
          </div>

          <div class="form-group">
            <%= form.label :artist_id, class: "font-weight-bold" %>
            <%= form.collection_select :artist_id, @artists, :id, :name, { prompt: "Selecciona el artista" }, { class: "form-control", required: true } %>
            <div class="invalid-feedback">
              Please select an artist.
            </div>
          </div>

          <div class="form-group">
            <%= form.label :comments, class: "font-weight-bold" %>
            <%= form.text_area :comments, class: "form-control" %>
          </div>

        <div class="form-group">
          <div class="custom-file">
            <%= form.file_field :cover_image, class: "form-control-file" %>
            <label class="custom-file-label" for="album_album_image">Seleccionar archivo</label>
          </div>
          <div class="invalid-feedback">
            Por favor selecciona una imagen.
          </div>
        </div>

        <div class="actions text-center mt-4">
          <%= form.submit "Guardar álbum", class: "btn btn-primary custom-button" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Regresar a álbums", albums_path %>
  </div>
</div>