
<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Nuevo artista</h1>
      
      <%= form_with(model: artist) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :genre_id %>
          <%= form.collection_select :genre_id, @genres, :id, :name, { prompt: "Selecciona el género" }, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.label :artist_image, "Imágen", class: "font-weight-bold" %>
          <div class="custom-file"> <%# Custom file input %>
            <%= form.file_field :artist_image, class: "custom-file-input", required: true %>
            <label class="custom-file-label" for="genre_genre_image">Seleccionar archivo</label>
          </div>
        </div>
        
        <div class="actions text-center mt-4"> 
          <%= form.submit "Guardar", class: "btn btn-primary custom-button" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Regresar a artistas", artists_path %>
  </div>